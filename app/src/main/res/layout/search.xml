<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/search_relativelaout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/search_inner_rela"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0091ea">
        <TextView
            android:id="@+id/search_tv_search"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentRight="true"
            android:text="@string/search"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:clickable="true"
            android:layout_marginRight="4dp"
            android:layout_marginTop="8dp"
            android:textSize="18sp"
            />
        <ImageView
            android:id="@+id/search_img_back"
            android:src="@drawable/ic_keyboard_arrow_left_white_24dp"
            android:layout_width="30dp"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:clickable="true"
            />
        <EditText
            android:id="@+id/search_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:layout_toLeftOf="@+id/search_tv_search"
            android:layout_alignBottom="@+id/search_tv_search"
            android:singleLine="true"
            android:layout_toRightOf="@+id/search_img_back"
            android:drawableRight="@drawable/ic_clear_white_24dp"
            android:textColor="#FFFFFF"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/search_tv_clearall"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:clickable="true"
        android:text="@string/clearhistory"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:background="#FF0000"/>
    <ListView
        android:id="@+id/search_listview"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_below="@+id/search_inner_rela"
        android:layout_marginTop="8dp"
        android:layout_above="@+id/search_tv_clearall"
        />
</RelativeLayout>